#
# ~/.bashrc
#

# If not running interactively, don't do anything
[[ $- != *i* ]] && return

alias theme='stow -d ~/dotfiles'
alias untheme='stow -D -d ~/dotfiles'

alias code='codium'
alias ls='ls -a --color=auto'
alias grep='grep --color=auto'
alias reload='chezmoi apply && hyprctl reload && systemctl --user restart waybar.service'
PS1='[\u@\h \W]\$ '
