alias reload='chezmoi apply && hyprctl reload && 
systemctl --user restart waybar.service && 
systemctl --user restart hypridle.service && 
systemctl --user restart hyprpaper.service && 
swaync-client --reload-config'
# &&
#sudo keyd reload'

alias sys-up-down='sudo pacman -Syyuu && shutdown now'

alias fix-arduino="sudo chmod a+rw /dev/ttyACM0"

PS1='[\u@\h \W]\$ '

fastfetch
